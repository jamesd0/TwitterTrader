    //
       BEGIN LOGIN 
    .content
      //
         BEGIN LOGIN FORM 
      form.form-vertical.login-form(action='login', method="post")
        h3.form-title Login to your account
        .alert.alert-error.hide
          button.close(data-dismiss='alert')
          span Enter any username and password.
        .control-group
          //
            ie8, ie9 does not support html5 placeholder, so we just show field title for that
          label.control-label.visible-ie8.visible-ie9 Username
          .controls
            .input-icon.left
              i.icon-user
              input.m-wrap.placeholder-no-fix(type='text', placeholder='Username',id='username', name='username')
        .control-group
          label.control-label.visible-ie8.visible-ie9 Password
          .controls
            .input-icon.left
              i.icon-lock
              input.m-wrap.placeholder-no-fix(type='password', placeholder='Password',id='password', name='password')
        .form-actions
          label.checkbox
            input(type='checkbox', name='remember', value='1')
            | Remember me
          button.btn.green.pull-right(type='submit')
            input(type='submit', name='submit')
            | Login
            i.m-icon-swapright.m-icon-white
        .forget-password
          h4 Forgot your password ?
          p
            | no worries, click 
            a#forget-password here 
            | to reset your password.
        .create-account
          p
            | Don't have an account yet ?
            a#register-btn  Create an account
      //
         END LOGIN FORM 
      //
         BEGIN FORGOT PASSWORD FORM 
      form.form-vertical.forget-form(action='index')
        h3 Forget Password ?
        p Enter your e-mail address below to reset your password.
        .control-group
          .controls
            .input-icon.left
              i.icon-envelope
              input.m-wrap.placeholder-no-fix(type='text', placeholder='Email', name='email')
        .form-actions
          button#back-btn.btn(type='button')
            i.m-icon-swapleft
            | Back
          button.btn.green.pull-right(type='submit')
            | Submit
            i.m-icon-swapright.m-icon-white
      //
         END FORGOT PASSWORD FORM 
      //
         BEGIN REGISTRATION FORM 
      form.form-vertical.register-form(action='index')
        h3 Sign Up
        p Enter your account details below:
        .control-group
          label.control-label.visible-ie8.visible-ie9 Username
          .controls
            .input-icon.left
              i.icon-user
              input.m-wrap.placeholder-no-fix(type='text', placeholder='Username', name='username')
        .control-group
          label.control-label.visible-ie8.visible-ie9 Password
          .controls
            .input-icon.left
              i.icon-lock
              input#register_password.m-wrap.placeholder-no-fix(type='password', placeholder='Password', name='password')
        .control-group
          label.control-label.visible-ie8.visible-ie9 Re-type Your Password
          .controls
            .input-icon.left
              i.icon-ok
              input.m-wrap.placeholder-no-fix(type='password', placeholder='Re-type Your Password', name='rpassword')
        .control-group
          //
            ie8, ie9 does not support html5 placeholder, so we just show field title for that
          label.control-label.visible-ie8.visible-ie9 Email
          .controls
            .input-icon.left
              i.icon-envelope
              input.m-wrap.placeholder-no-fix(type='text', placeholder='Email', name='email')
        .control-group
          .controls
            label.checkbox
              input(type='checkbox', name='tnc')
              | I agree to the
              a(href='#') Terms of Service
              | and
              a(href='#') Privacy Policy
            #register_tnc_error
        .form-actions
          button#register-back-btn.btn(type='button')
            i.m-icon-swapleft
            | Back
          button#register-submit-btn.btn.green.pull-right(type='submit')
            | Sign Up
            i.m-icon-swapright.m-icon-white
      //
         END REGISTRATION FORM 
