    script(src='plugins/jquery-1.8.3.min.js', type='text/javascript')
    script(src='plugins/bootstrap/js/bootstrap.min.js', type='text/javascript')
    //if lt IE 9
      script(src='plugins/excanvas.js')
      script(src='plugins/respond.js')
    script(src='plugins/breakpoints/breakpoints.js', type='text/javascript')
    script(src='plugins/jquery.cookie.js', type='text/javascript')
    script(src='plugins/uniform/jquery.uniform.min.js', type='text/javascript')
    //
       END CORE PLUGINS 
    script(src='scripts/app.js')
    script.
      jQuery(document).ready(function() {
      App.init();
      });
    //
       END JAVASCRIPTS 
  //
     END BODY 
